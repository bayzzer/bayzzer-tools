{
  "compilerOptions": {
    "outDir": "dist", 
    "baseUrl": ".",
    "paths": {     
      "@types": ["types/index"], 
      "@bayzzer/tools": ["tools/index"]
    },
    "lib": ["es2015"],
    "target": "ES6",
    "strict": true,
    "declaration": true,
    "importHelpers": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declarationMap": true,
    "noEmit": false,
    "moduleResolution": "node",
    "module": "esnext",
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "stories",
    "dist",
    "gulpfile.js"
  ]
}
